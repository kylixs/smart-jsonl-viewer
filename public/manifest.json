{
  "manifest_version": 3,
  "name": "JSONL Viewer",
  "version": "1.1.0",
  "description": "智能 JSONL 查看器，支持字符串解码和高级过滤",
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "JSONL Viewer"
  }
}
